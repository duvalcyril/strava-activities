<table>
    <tr>
        <th></th>
        <th align="center">Distance</th>
        <th align="center">Elevation</th>
        <th align="center">Time</th>
        <th></th>
    </tr>
    {% for activity in activities %}
        <tr>
            <td><a href="{{ activity.getUrl() }}">{{ activity.getName() }}</a></td>
            <td align="center">{{ activity.getDistance() }}</td>
            <td align="center">{{ activity.getElevation() }}</td>
            <td align="center">{{ activity.getMovingTime() }}</td>
            {% if activity.getPrimaryImage() %}
                <td><img src="{{ activity.getPrimaryImage() }}" width="100" /></td>
            {% else %}
                <td></td>
            {% endif %}
        </tr>
    {% endfor %}
</table>