{% autoescape false %}
    {
    "animation": false,
    "grid": {
    "left": "3%",
    "right": "4%",
    "bottom": "3%",
    "containLabel": true
    },
    "xAxis": {
    "type": "category",
    "data": [
    "Mon",
    "Tue",
    "Wed",
    "Thu",
    "Fri",
    "Sat",
    "Sun"
    ]
    },
    "yAxis": {
    "type": "value",
    "splitLine": {
    "show": false
    },
    "axisLabel": {
    "show": false
    }
    },
    "series": [
    {
    "type": "bar",
    "label": {
    "show": true,
    "position": "inside",
    "formatter": "{@[1]} rides\n{@[2]} km\n{@[3]}"
    },
    "showBackground": true,
    "itemStyle": {
    "color": "#E34902"
    },
    "backgroundStyle": {
    "color": "rgba(227, 73, 2, 0.3)"
    },
    "data": {{ data|json_encode(constant('JSON_PRETTY_PRINT')) }}
    }
    ]
    }
{% endautoescape %}